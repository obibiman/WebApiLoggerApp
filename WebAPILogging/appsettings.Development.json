{
    "ConnectionStrings": {
        "GroceryDb": "Server=(LocalDb)\\MSSQLLocalDB;Database=GroceryDb;Integrated Security=true;MultipleActiveResultSets=true"
    },
    "DetailedErrors": true,
    "AllowedHosts": "*",
    "Serilog": {
        "Using": [],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithProcessId",
            "WithThreadId"
        ],
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "C:\\Devsource\\LowerOldRiver\\WestLab\\WebAPILogging\\WebAPILogging\\logs\\log.txt",
                    "outputTemplate": "{Timestamp:G}{Message}{Newline:1}{Exception:1}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "C:\\Devsource\\LowerOldRiver\\WestLab\\WebAPILogging\\WebAPILogging\\logs\\log.json",
                    "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
                }
            },
            {
                "Name": "Seq",
                "Args": {
                    "serverUrl": "http://localhost:8081"
                }
            }

        ]
    }
}